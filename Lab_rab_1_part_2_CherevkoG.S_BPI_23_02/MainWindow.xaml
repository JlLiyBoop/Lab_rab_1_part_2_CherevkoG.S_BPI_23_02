<Window x:Class="Lab_rab_1_part_2_CherevkoG.S_BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_1_part_2_CherevkoG.S_BPI_23_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Введи функцию с одной переменной"/>
        <Button Grid.Column="2" Grid.Row="0" Height="40" Width="120" Content="Рассчитать значение функции" VerticalAlignment="Bottom"/>
        <TextBlock TextWrapping="Wrap" Grid.Row="0" Grid.Column="2" VerticalAlignment="Top"
                   Text="Рассчет значения функции при написанном значении переменной"
                   TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="znachx" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Height="40"/>
        <TextBox x:Name="raschetfunc" Grid.Row="1" Grid.Column="2" Margin="10"/>
    </Grid>
</Window>
